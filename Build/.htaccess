# --- Unity WebGL Gzip & Brotli Handling ---
<IfModule mod_mime.c>
  # Pastikan tipe file dikenali
  AddType application/wasm .wasm
  AddType application/javascript .js
  AddType application/octet-stream .data
  AddType text/plain .symbols.json

  # Pastikan .gz dan .br dikenali sebagai encoding
  AddEncoding gzip .gz
  AddEncoding br .br
</IfModule>

<IfModule mod_headers.c>
  # File gzip
  <FilesMatch "\.gz$">
    Header set Content-Encoding gzip
  </FilesMatch>

  # File Brotli
  <FilesMatch "\.br$">
    Header set Content-Encoding br
  </FilesMatch>

  # Pastikan browser tahu kapan harus pakai gzip/br
  Header append Vary Accept-Encoding
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On

  # Redirect otomatis ke file .gz jika browser mendukung gzip
  RewriteCond %{HTTP:Accept-Encoding} gzip
  RewriteCond %{REQUEST_FILENAME}.gz -s
  RewriteRule ^(.*)\.wasm$ $1\.wasm.gz [QSA,L]
  RewriteCond %{REQUEST_FILENAME}.gz -s
  RewriteRule ^(.*)\.js$ $1\.js.gz [QSA,L]
  RewriteCond %{REQUEST_FILENAME}.gz -s
  RewriteRule ^(.*)\.data$ $1\.data.gz [QSA,L]
</IfModule>

# Tambahan opsional: cache supaya cepat
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 year"
</IfModule>
